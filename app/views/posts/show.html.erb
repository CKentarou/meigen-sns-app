<h1></h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="mb-3">
        <p><%= @post.content %></p>
      </div>
      <div class="mb-3">
        <p><%= @post.author %></p>
      </div>
      <% if @post.favorited_by?(current_user) %>
        <%= link_to post_favorites_path(@post), method: :delete do%>
          ❤️<%= @post.favorites.count %>いいね
        <% end %>
      <% else %>
        <%= link_to post_favorites_path(@post), method: :post do%>
          ❤️<%= @post.favorites.count %>いいね
        <% end %>
      <% end %>
      <div class="mb-3 text-center">
        <%= link_to 'Back', posts_path(sort_by: "session"), class: 'btn btn-outline-secondary' %>
        <% if current_user.id == @post.user_id %>
          <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-outline-primary' %>
          <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
        <% end %>
      </div>
    </div>
  </div>
</div>